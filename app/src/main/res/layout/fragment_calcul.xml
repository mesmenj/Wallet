<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu"
    android:orientation="vertical"
    tools:context=".FragmentCalcul">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bleu_">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="375dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_check_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/ic_baseline_clear_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/bleu"
            android:text="REVENUS"/>
        <Button
            android:layout_width="136dp"
            android:layout_height="40dp"
           android:backgroundTint="@color/bleu"
            android:text="DEPENSES"/>
        <Button
            android:layout_width="136dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/bleu"
            android:text="TRANSFERER"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="143dp"
            android:text="XAF"
            android:textColor="@color/white_"
            android:textSize="30dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/inputNumber"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="168dp"
            android:layout_marginBottom="96dp"
            android:backgroundTint="@color/white"
            android:gravity="end"
            android:hint="0"
            android:inputType="number"
            android:paddingTop="50dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="80dp"
            android:verticalScrollbarPosition="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="271dp"
            android:layout_marginBottom="23dp"
            android:text="Depuis le compte"
            android:textColor="@color/white_" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="23dp"
            android:text="Vers le compte"
            android:textColor="@color/white_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="6dp"
            android:text="ESPECES"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="7dp"
            android:text="SELECTIONNER UNE CART..."
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_baseline_east_24" />
    </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white_">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Montant cible - 0 FCFA"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"/>
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="370dp"
            android:orientation="vertical"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/seven"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="7"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/huit"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="8"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/nine"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="9"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/four"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="4"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/five"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="5"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/six"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="6"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/one"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="1"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/two"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="2"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/three"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="3"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/virgule"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text=","
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <Button
                    android:id="@+id/zero"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/black_"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    android:backgroundTint="@color/white"/>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="370dp"
            android:orientation="vertical"
            android:background="@color/white_">
            <Button
                android:id="@+id/div"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="/"
                android:textSize="30dp"
                android:textColor="@color/black_"
                android:backgroundTint="@color/white_"/>

            <Button
                android:id="@+id/soustr"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white_"
                android:text="-"
                android:textStyle="bold"
                android:textColor="@color/black_"
                android:textSize="30dp" />
            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:text="+"
                android:textSize="30dp"
                android:textColor="@color/black_"
                android:backgroundTint="@color/white_"/>

            <Button
                android:id="@+id/multi"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="*"
                android:textSize="30dp"
                android:textColor="@color/black_"
                android:backgroundTint="@color/white_"/>
            <Button
                android:id="@+id/equals"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="="
                android:textSize="30dp"
                android:textColor="@color/black_"
                android:backgroundTint="@color/white_"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>